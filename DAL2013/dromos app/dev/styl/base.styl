

/* Variables
==============================================*/
bg_primary = #fff
bg_secondary = #3e3947
fg_primary = #e6b923
fg_secondary = #ee688d
contextual_primary = #bad5c3
contextual_secondary = #b4b4b4
shadow = #3c3c3c
marker = #39c9ea


@media only screen and (max-width: 767px)
	.container
		width 100%



html,body
	font-family 'Conv_HelveticaNeue-Light'
	height 100%


h1, h2
	font-family 'Conv_HelveticaNeue-Light'

#screen, .container
	background bg_secondary
	height 100%


header
	background bg_secondary
	display table
	width 100%

	a, a:visited, h1
		color bg_primary
		font-size 1.5em
		text-decoration none
		text-align center
		display table-cell

	h1
		font-weight normal
		width 70%
		display table-cell

.icon-logo
	background shadow
	display inline-block
	border-radius 10em
	box-shadow 2px 10px 0 rgba(0,0,0,0.3)
	text-decoration none

/* SPLASH
================================================================*/
#splash
	width 100%
	height 100%
	background fg_primary url('../img/splash.jpg');
	background-size cover
	position absolute
	top 0
	left 0
	z-index 900

	a.icon-logo
		font-size 15em
		color fg_primary
		position absolute
		top 50%
		left 50%
		margin-left -0.5em
		margin-top -0.9em

	a.text-logo 
		display inline-block
		position absolute
		top 50%
		width 100%
		margin-top 5em
		text-align center
				
		
		img
			width 40%
			margin-left 8%

/* HOME
================================================================*/

#home
	height 100%
	text-align center

	a
		display block
		height 35%
		text-decoration none
		font-size 2em
		text-shadow 2px 2px 0 #000
		color contextual_secondary
		background url('../img/hasta.png') 50% 50%
		background-size cover
		text-align right

		&:first-child
			background-image url('../img/desde.png')
			text-align left


		&:hover
			color fg_primary

		div
			background rgba(0,0,0,0.6)
			height 40%
			width 100%
			display table


			span
				display table-cell
				vertical-align bottom
				padding 10px


		&.icon-logo
			@extend .icon-logo
			height auto
			font-size 10em
			margin-top -10px

/* Lista de puntos
================================================================*/			
#listaPuntos
	background bg_primary
	height 100%
	overflow auto

	form
		background bg_secondary
		text-align center
		padding 0
		margin 0

		input
			display inline-block
			background bg_secondary
			border 1px solid bg_primary
			color bg_primary
			width 80%
	ul
		li
			margin 0
			a
				display block
				padding 10px
				text-decoration none
				border-bottom 1px solid #ccc

				&:hover
					background bg_secondary
					color bg_primary


/* Rutas
================================================================*/	

#rutas
	background bg_primary
	height 100%
	overflow auto